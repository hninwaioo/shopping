<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_account" />

            <com.za.sbs.delivery.widgets.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:text="Login"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <com.za.sbs.delivery.widgets.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="အကောင့်ထဲသို့ ဝင်ရောက်မည်"
                android:textColor="@color/colorWhite"
                android:textSize="17dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3"
            android:background="@drawable/round_top_corner_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.za.sbs.delivery.widgets.MMEditText
                    android:id="@+id/etUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="42dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="16dp"
                    android:hint="အီးမေးလ်"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="42dp"
                    android:gravity="center"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/show_password_selector"
                    app:passwordToggleEnabled="true">

                    <com.za.sbs.delivery.widgets.MMEditText
                        android:id="@+id/etUserPwd"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/etUserEmail"
                        android:drawableStart="@drawable/ic_password"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="16dp"
                        android:hint="စကားဝှက်"
                        android:inputType="textPassword"
                        android:paddingLeft="8dp"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="42dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.za.sbs.delivery.widgets.MMTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="စကားဝှက်မေ့နေလား?"
                        android:textColor="@color/colorTint"
                        android:textSize="16dp" />

                    <com.za.sbs.delivery.widgets.MMButton
                        android:id="@+id/btnSignIn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/button_background"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="ဝင်မည်"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />


                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

    <com.za.sbs.delivery.widgets.MMTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Developed By Za Information Technology Co.,Ltd \n @2019 SBS Express"
        android:textColor="@color/text_main"
        android:textSize="14dp" />

</RelativeLayout>