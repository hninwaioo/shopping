<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context=".fragment.AcceptNewParcelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:id="@+id/upper_layout"
        android:background="@color/colorPrimary">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/upper_layout"
        android:id="@+id/lower_layout"
        android:background="@drawable/round_background_white_10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_add_delivery"
            android:tint="@color/colorAccent"
            android:layout_marginTop="26dp"
            android:layout_gravity="center_horizontal"/>

        <com.za.sbs.delivery.widgets.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ချောလက်ခံရာတွင်"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"/>

        <com.za.sbs.delivery.widgets.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/require_accept_parcel"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp">

        <com.za.sbs.delivery.widgets.MMTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept_new_parcel"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@drawable/add_delivery_arrow"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accept_new_parcel"
            app:fabCustomSize="60dp"
            android:padding="5dp"
            android:src="@drawable/ic_add_white_24dp"/>

    </LinearLayout>

</RelativeLayout>